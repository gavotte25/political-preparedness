<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>
    <style name="CustomTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:paddingVertical">@dimen/small_padding</item>
    </style>
    <style name="CustomSubTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/secondaryColor</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:theme">@style/AppTheme</item>
    </style>
</resources>
